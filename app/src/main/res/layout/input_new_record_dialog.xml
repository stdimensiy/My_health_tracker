<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_systolic_pressure_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/systolic_pressure_title_text"
        android:textSize="@dimen/dialog_helper_text_size"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_systolic_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_systolic_pressure_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_systolic_pressure_title_text" />

    <TextView
        android:id="@+id/tv_diastolic_pressure_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diastolic_pressure_title_text"
        android:textSize="@dimen/dialog_helper_text_size"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/et_systolic_pressure"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/et_diastolic_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_diastolic_pressure_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_diastolic_pressure_title_text" />

    <TextView
        android:id="@+id/tv_heartRate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/heartRate_title_text"
        android:textSize="@dimen/dialog_helper_text_size"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/et_diastolic_pressure"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/et_heartRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_heartRate_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_heartRate_text" />
</androidx.constraintlayout.widget.ConstraintLayout>


